<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/llama"
    android:padding="0dp"
    tools:context=".advice.AdviceActivity">


    <TextView
        android:id="@+id/theoryTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:background="@color/colorButton"
        android:text="@string/theory_bar_label"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorTextButtonWhite"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/bananaButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/button"
        android:text="@string/banana_button_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="110sp"
        android:layout_marginRight="110sp"
        android:layout_marginBottom="600sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/very_round_corners"
        android:orientation="vertical"
        android:visibility="visible"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="50dp">

        <Button
            android:id="@+id/addButton"
            android:layout_width="59dp"
            android:layout_height="53dp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="60sp"
            android:background="@drawable/addcross" />
    </RelativeLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/layout1"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="150dp">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>